{
  "manifest_version": 3,
  "name": "SmartBrowse",
  "description": "AI-powered browsing helper that summarizes web content.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}
